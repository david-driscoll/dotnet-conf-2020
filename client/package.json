{
  "name": "nin-server",
  "displayName": "nin.server",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ini"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Nine Inch Nails",
      "properties": {
        "ini.rainbow": {
          "type": "boolean",
          "default": false,
          "description": "Enable rainbow syntax tokenization"
        },
        "nin.hardrock": {
          "type": "boolean",
          "default": "false",
          "description": "Enable hard rock mode and disables autocomplete"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.14.6",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^10.1.0",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0-next.12"
  }
}
